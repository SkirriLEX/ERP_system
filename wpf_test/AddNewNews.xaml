<Window x:Class="erp.AddNewNews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:erp"
        mc:Ignorable="d"
        Title="AddNewNews" Height="450" Width="800">
    <Grid>
        <Label Content="Тема новини" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="28" Width="106" FontStyle="Normal"/>
        <TextBox Name="themeNewsBox" HorizontalAlignment="Left" Height="46" Margin="10,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="277"/>
        <Label  Content="Текст новини" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBox Name="textNewsBox" HorizontalAlignment="Left" Height="77" Margin="10,139,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="277"/>
        <Button Content="Додати новину" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click"/>

    </Grid>
</Window>
